{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch API (HTTP)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build solution",
      "program": "${workspaceFolder}/backend/DailyWatt.Api/bin/Debug/net10.0/DailyWatt.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/DailyWatt.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        // Open the HTTP endpoint only (avoids HTTPS cert prompt) and go directly to Scalar UI
        "pattern": "\\bNow listening on:\\s+(http://\\S+)",
        "uriFormat": "%s/scalar/v1",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5077"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": ".NET Launch API (HTTPS)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build solution",
      "program": "${workspaceFolder}/backend/DailyWatt.Api/bin/Debug/net10.0/DailyWatt.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/DailyWatt.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        // Keep HTTPS for this profile, but open Scalar directly
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar/v1",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7224;http://localhost:5077"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": ".NET Launch Worker (Debugging)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build solution",
      "program": "${workspaceFolder}/backend/DailyWatt.Worker/bin/Debug/net10.0/DailyWatt.Worker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/DailyWatt.Worker",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Angular (Edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "preLaunchTask": "frontend: start",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/dailywatt-web/src",
      "userDataDir": "${workspaceFolder}/.vscode/edge-profile",
      // If Edge is not in the default location, set runtimeExecutable to the full path of msedge.exe
      // "runtimeExecutable": "C:/Program Files (x86)/Microsoft/Edge/Application/msedge.exe",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ðŸ”µ API + Worker (Backend)",
      "configurations": [
        ".NET Launch API (HTTP)",
        ".NET Launch Worker (Debugging)"
      ]
    },
    {
      "name": "ðŸ”µ API + Worker (Backend, HTTPS)",
      "configurations": [
        ".NET Launch API (HTTPS)",
        ".NET Launch Worker (Debugging)"
      ]
    },
    {
      "name": "ðŸŸ¢ Full Stack (API + Worker + Web)",
      "configurations": [
        ".NET Launch API (HTTP)",
        ".NET Launch Worker (Debugging)",
        "Angular (Edge)"
      ]
    },
    {
      "name": "ðŸŸ¢ Full Stack (API HTTPS + Worker + Web)",
      "configurations": [
        ".NET Launch API (HTTPS)",
        ".NET Launch Worker (Debugging)",
        "Angular (Edge)"
      ]
    }
  ]
}
