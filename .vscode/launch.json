{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch API (Debugging)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build solution",
      "program": "${workspaceFolder}/backend/DailyWatt.Api/bin/Debug/net10.0/DailyWatt.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/DailyWatt.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "dotnetRunMessages": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": ".NET Launch Worker (Debugging)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build solution",
      "program": "${workspaceFolder}/backend/DailyWatt.Worker/bin/Debug/net10.0/DailyWatt.Worker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/DailyWatt.Worker",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Angular (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "frontend: start",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/dailywatt-web/src",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ðŸ”µ API + Worker (Backend)",
      "configurations": [
        ".NET Launch API (Debugging)",
        ".NET Launch Worker (Debugging)"
      ]
    },
    {
      "name": "ðŸŸ¢ Full Stack (API + Worker + Web)",
      "configurations": [
        ".NET Launch API (Debugging)",
        ".NET Launch Worker (Debugging)",
        "Angular (Chrome)"
      ]
    }
  ]
}
