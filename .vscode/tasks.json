{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: build solution",
      "type": "shell",
      "command": "dotnet build backend/DailyWatt.sln",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "backend: clean",
      "type": "shell",
      "command": "dotnet clean backend/DailyWatt.sln",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "backend: watch",
      "type": "shell",
      "command": "dotnet watch --project backend/DailyWatt.Api run",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": "$msCompile",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*dotnet watch.*",
          "endsPattern": "^.*Application started.*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "backend: run API (http)",
      "type": "shell",
      "command": "dotnet run --project backend/DailyWatt.Api --launch-profile http",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "backend: run API (https)",
      "type": "shell",
      "command": "dotnet run --project backend/DailyWatt.Api --launch-profile https",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "backend: run Worker",
      "type": "shell",
      "command": "dotnet run --project backend/DailyWatt.Worker",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "frontend: install",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/frontend/dailywatt-web"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "frontend: start",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "angular",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*(Starting.*(Angular|Development) Server|Generating browser application bundles).*",
          "endsPattern": ".*(Compiled successfully|Compiled with warnings).*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend/dailywatt-web"
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "frontend: build",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend/dailywatt-web"
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "frontend: test",
      "type": "shell",
      "command": "npm test",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend/dailywatt-web"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "run all (API + Worker + Web)",
      "type": "shell",
      "command": "echo Starting API + Worker + Web...",
      "dependsOn": [
        "backend: run API (http)",
        "backend: run Worker",
        "frontend: start"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
